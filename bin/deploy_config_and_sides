#!/bin/bash
EPRINTS_PATH=$1
EPRINTS_URL=$2
d=`dirname $0`
DIR=`cd $d; pwd`
cd $DIR/../
for template in `ls sides/templates/`; do
	side=`echo $template | sed 's/\.tmpl$//'`
	cat sides/templates/$template | sed "s!EPRINTS_URL!$EPRINTS_URL!g" | sed 's/\\\\n/\\n/g' > sides/$side
done
if [ -d $EPRINTS_PATH/lib/static/ ]; then
	cp cfg/selenium.xhtml $EPRINTS_PATH/lib/static/
else
	echo "WARNING: You will need to copy $DIR/selenium.xhtml to $EPRINTS_PATH/lib/static/ on your EPrints repository server!"
fi

